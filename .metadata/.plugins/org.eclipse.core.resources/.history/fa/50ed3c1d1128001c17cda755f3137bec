package br.com.alura.data;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.sql.Statement;
import java.sql.ResultSet;

import br.com.alura.model.Produto;

public class TestaInsercaoComProduto {

	public static void main(String[] args) throws SQLException {
		Produto comoda = new Produto("Sofá","Sofá formato L");

		try(Connection connection = new ConnectionFactory().getConexao()){
			PersistenciaProduto persitenciaProduto 
			= new PersistenciaProduto(connection);
			persistenciaProduto.salvarProduto(comoda);
		}
		System.out.println(comoda);
	}

}
